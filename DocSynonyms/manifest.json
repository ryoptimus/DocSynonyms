{
    "manifest_version": 3,
    "name": "DocSynonyms",
    "description": "Synonym finder for Google Docs",
    "version": "0.1.0",
    "permissions": [
        "storage", 
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://docs.google.com/document/d/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://docs.google.com/document/d/*"],
            "all_frames": true,
            "js": ["gdocs.js", "content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["script.js"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["/images/menuIcon.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "/images/docsyn-main-16x16.png",
        "48": "/images/docsyn-main-48x48.png",
        "128": "/images/docsyn-main-128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "DocSynonyms",
        "default_icon": {
            "16": "/images/docsyn-page-16x16.png",
            "48": "/images/docsyn-page-48x48.png",
            "128": "/images/docsyn-page-128x128.png"
        }
    }
}